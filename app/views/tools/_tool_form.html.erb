<%= simple_form_for(@tool) do |f| %>
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-offset-4 col-sm-4">

        <% if @tool.errors.any? %>
          <div class="errors-container">
            <ul>
              <% @tool.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <%= f.input :title %>

        <%= f.input :price_per_day %>

        <%= f.input :address %>

        <div class='form-group'>
          <%= f.input :photo %>
          <%= f.input :photo_cache, as: :hidden, class: 'form-control' %>
        </div>

        <%= f.submit class: 'btn btn-primary btn-block' %>


      </div>
    </div>
  </div>


<% end %>
