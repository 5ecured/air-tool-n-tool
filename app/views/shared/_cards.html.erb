<div class="container">

  <h2 class="text-center">Here are all the tools</h2>
  <div class="row">

    <% @tools.each do |tool| %>
    <div class="col-xs-12 col-sm-6 col-lg-4">
      <div class="card">
        <div id="card-body-1">
          <div class="card-avatar">
            <img src="https://source.unsplash.com/collection/2342139/250x150" alt="" id="jad">
            <div class="card-category">
              <%= tool.title %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% end %>

  </div>
</div>