<div class="box">
  <div class="row-parent">
    <h1 class="text-center">Recently Added Tools</h1>
    <div class="row">

      <% @tools.each do |tool| %>
      <div class="col-xs-12 col-sm-6 col-lg-4">
        <div class="card">
          <img src="https://source.unsplash.com/collection/2342139/250x150" alt="" class="card-hover">
          <div class="card-category">
            <%= link_to tool.title, tool_path(tool), class: 'link-colour' %>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>

  <div
    id="map"
    style="width: 100%; height: 600px;"
    data-markers="<%= @markers.to_json %>">
  </div>
</div>

